<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffbe2c"
                android:clickable="false"
                tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/welocme_linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="400.0"
        >

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="35"
            android:background="#ffbe2c"
            android:weightSum="40.0">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:layout_weight="10"
                android:background="@drawable/m4"
                android:scaleType="fitXY"
                android:onClick="openMenu"/>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:layout_weight="10"
                android:background="@drawable/m3"
                android:onClick="goToMessages"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:layout_weight="10"
                android:background="@drawable/m2"
                android:onClick="goToFavorites"
                android:scaleType="fitXY"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:layout_weight="10"
                android:adjustViewBounds="false"
                android:background="@drawable/m1"
                android:onClick="goToFilter"
                android:scaleType="fitXY"/>

        </TableRow>

        <View
            android:id="@+id/devider11"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:background="#000000"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/turnGps"
            android:id="@+id/turnOnGps"
            android:textSize="20sp"
            android:layout_below="@+id/devider11"
            android:layout_alignParentStart="true"
            android:background="#be9434"
            android:autoText="true"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="italic"/>
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/turnOnGps"
            android:layout_weight="308"
            android:id="@+id/swipe">
        <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/turnOnGps"
            android:layout_weight="308"
            android:background="#000000"
            android:horizontalSpacing="4dp"
            android:numColumns="3"
            android:verticalSpacing="4dp"
            android:scrollingCache="false"
            android:animationCache="false"
            android:persistentDrawingCache="scrolling"
            android:cacheColorHint="@android:color/transparent">
        </GridView>
        </android.support.v4.widget.SwipeRefreshLayout>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"
            android:background="#000000">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/online2"/>

            <TextView
                android:id="@+id/online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:text="@string/online"
                android:textColor="#ffffff"
                android:textSize="10dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/gps_acuuraty"/>

            <TextView
                android:id="@+id/distanceAcuuraty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:text="15m"
                android:textColor="#ffffff"
                android:textSize="10dp"/>

        </TableRow>

        <TextView
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="35"
            android:background="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="15dp"
            android:shadowColor="#FFFFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="15"
            android:text="@string/app_name"
            android:textColor="#ffbe2c"
            android:textSize="30dp"
            android:textStyle="bold">
        </TextView>


    </LinearLayout>

</RelativeLayout>
