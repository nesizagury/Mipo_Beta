<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/message_itemIV"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="1dp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/message_item_nameTV"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/message_itemIV"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="#575757"
        android:paddingStart="5dp"/>

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="8678678678678678678678678ujkhbkgjghkjyuky6786jiujky7iyuk678ik67k"
        android:id="@+id/message_item_bodyTV"
        android:layout_below="@+id/message_item_nameTV"
        android:layout_toEndOf="@+id/message_itemIV"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:textColor="#a6a6a6"/>
</RelativeLayout>