<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mipo.SmsSignUpActivityPart2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:id="@+id/sms_p2_imageV"
                android:layout_gravity="center"
                android:background="#d7d5d5" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="@string/optional"
                android:id="@+id/sms_p2_optionalTV"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:gravity="center" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sms_p2_upload_button"
                android:text="@string/upload"
                android:onClick="imageUpload"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/username"
                    android:id="@+id/sms_p2_usernameTV"
                    android:textSize="25sp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginStart="10dp"
                    android:ems="10"
                    android:id="@+id/sms_p2_usernameTE" />

            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/age"
                    android:id="@+id/sms_p2_age_tv"
                    android:textSize="25sp"/>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/sms_p2_age_s"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/gender"
                    android:id="@+id/sms_p2_gender"
                    android:textSize="25sp"/>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/sms_p2_gender_s"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/looking_for"
                    android:id="@+id/sms_p2_loking_for_tv"
                    android:textSize="25sp"/>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/sms_p2_lokingfor_s"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/height"
                    android:id="@+id/sms_p2_height_tv"
                    android:textSize="25sp"/>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/sms_p2_height_s"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/sms_p2_legal_statement_tv"
                    android:textSize="25sp"/>


                <CheckBox
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/sms_p2_legal_check_box"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signUp"
                android:id="@+id/sms_p2_button"
                android:onClick="Signup"
                android:layout_gravity="center"
                android:layout_marginBottom="38dp" />


        </LinearLayout>


    </ScrollView>
</LinearLayout>
