<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aaa.UserPage">

    <ImageView
        android:src="@drawable/pic2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/usrPage_image"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#88000000"
        android:layout_alignBottom="@+id/usrPage_image"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:text="Alexandra.W , 28"
            android:id="@+id/name_profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="23sp"
            android:textColor="#fffdfd"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:text="Seen 19 min ago |"
            android:id="@+id/seen_profile"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@+id/name_profile"
            android:layout_alignStart="@+id/name_profile"
            android:layout_alignEnd="@+id/name_profile" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:id="@+id/detailed_profile_button"
            android:background="@drawable/three_p"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/seen_profile"
            android:layout_alignTop="@+id/name_profile"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="13dp" />

    </RelativeLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/favorite_main_button"
        android:background="@drawable/favorite"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/usrPage_image"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:background="@drawable/report"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/usrPage_image"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/message_button"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:onClick="messaging"
        android:background="@drawable/message" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/favorite_main_button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"
        android:layout_marginTop="-9dp"
        android:focusable="false" />

</RelativeLayout>
