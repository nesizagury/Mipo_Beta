<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/block_user_image"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/me0"
        android:layout_margin="1dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/block_username"
        android:layout_margin="1dp"
        android:layout_centerVertical="true"
        android:text="kznjzbz x nmkzln"
        android:layout_toEndOf="@+id/block_user_image"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_block"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/cancel_block_button" />
</RelativeLayout>